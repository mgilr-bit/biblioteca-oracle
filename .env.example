# Configuración de la Base de Datos Oracle
DB_USER=biblioteca_user
DB_PASSWORD=TU_PASSWORD_AQUI
DB_HOST=localhost
DB_PORT=1521
DB_SERVICE=XEPDB1

# Configuración de Flask
FLASK_ENV=development
FLASK_DEBUG=True

# IMPORTANTE: Cambiar en producción a una clave aleatoria y segura
# Generar con: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=CAMBIAR_ESTA_CLAVE_EN_PRODUCCION

# CORS - Dominios permitidos (separados por comas)
# En desarrollo: puertos locales
# En producción: dominio de tu aplicación
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,http://localhost:3000

# Puerto del servidor Flask
PORT=5000
